try:
    # Writing to a file
    with open("sample.txt", "w") as file:
        file.write("Hello, this is a Python file.\n")
        file.write("File handling is easy.")

    # Reading from a file
    with open("sample.txt", "r") as file:
        content = file.read()
        print(content)

except PermissionError:
    print("File permission denied. File operations are restricted in this environment.")
